b) App.js
import Student from "../Components/Student.js";
import Teacher from "../Components/Teacher.js";

const data = {
  name: "satyendra",
  class: "5th",
};

const App = () => {
  return (
    <>
      <Student data={data} />
      <Teacher />
    </>
  );
};

export default App;

